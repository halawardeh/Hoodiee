@model Hoodie.Models.User

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="clearfix userSection padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ul class="list-inline squareBtn">
                    <li class="li"><a asp-controller="User" asp-action="Profile" class="btn btn-common btn-theme cursor-default">Profile</a></li>
                    <li class="li"><a asp-controller="User" asp-action="AllOrders" class="btn btn-common">All Orders</a></li>
                    <li class="li"><a asp-controller="User" asp-action="Wishlist" class="btn btn-common">Wishlist</a></li>
                </ul>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="innerWrapper">
                    <div class="orderBox  patternbg">
                        profile
                    </div>

                    <div class="profile">
                        <div class="row">
                           

                            <div class="col-md-9 col-xl-10">
                                <form class="form-horizontal" asp-controller="User" asp-action="EditProfile" method="post">
                                    <div class="form-group row">
                                        <label class="col-md-4 col-xl-2 control-label text-md-right">First Name</label>
                                        <div class="col-md-8 col-xl-10">
                                            <input type="text" class="form-control" name="fname" value="@Model.Fname">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-4 col-xl-2 control-label text-md-right">Last Name</label>
                                        <div class="col-md-8 col-xl-10">
                                            <input type="text" class="form-control" name="lname" value="@Model.Lname">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-4 col-xl-2 control-label text-md-right">Phone Number</label>
                                        <div class="col-md-8 col-xl-10">
                                            <input type="text" class="form-control" name="phoneNumber" value="@Model.Phonenumber">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-4 col-xl-2 control-label text-md-right">Email Address</label>
                                        <div class="col-md-8 col-xl-10">
                                            <input type="email" class="form-control" name="email" value="@Model.Email" readonly>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

