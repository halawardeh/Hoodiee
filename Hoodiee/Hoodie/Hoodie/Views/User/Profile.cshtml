@model Hoodie.Models.User

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@* <h1>@Context.Session.GetString("email");</h1>
 *@<!-- USER SECTION -->
<section class="clearfix userSection padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ul class="list-inline squareBtn">
                    <li class="li"><a asp-controller="User" asp-action="Profile" class="btn btn-common btn-theme cursor-default">Profile</a></li>
                    <li class="li"><a asp-controller="User" asp-action="AllOrders" class="btn btn-common">All Orders</a></li>
                    <li class="li"><a asp-controller="User" asp-action="WishListDetails" class="btn btn-common">Wishlist</a></li>
                </ul>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="innerWrapper">
                    <div class="orderBox  patternbg">
                        profile
                    </div>
                    <div class="profile">
                        <div class="row">

                            <div class="col-md-9 col-xl-10">
                                <div class="form-horizontal">
                                    <div class="form-group row">
                                        <label class="col-md-4 col-xl-2 control-label text-md-right">Fisrt Name</label>
                                        <div class="col-md-8 col-xl-10">
                                            <div class="form-control-static">@Model.Fname</div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-4 col-xl-2 control-label text-md-right">Full Name</label>
                                        <div class="col-md-8 col-xl-10">
                                            <div class="form-control-static">@Model.Lname</div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-4 col-xl-2 control-label text-md-right">Phone Number</label>
                                        <div class="col-md-8 col-xl-10">
                                            <div class="form-control-static">@Model.Phonenumber</div>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-4 col-xl-2 control-label text-md-right">Email Address</label>
                                        <div class="col-md-8 col-xl-10">
                                            <div class="form-control-static">@Model.Email</div>
                                        </div>
                                    </div>

                                    <div class="form-group row justify-content-md-end">
                                        <div class="col-lg-offset-10 col-xl-2 col-offset-9 col-md-3" >
                                            <a asp-action="EditProfile" class="btn btn-primary btn-block">Edit  Your Profile</a>
                                        </div>
                                        <div class="col-lg-offset-10 col-xl-2 col-offset-9 col-md-3">
                                            <a asp-action="ResetPassword" class="btn btn-primary btn-block">Reset Password</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

             </div>
            </div>
        </div>
    </div>
</section>

