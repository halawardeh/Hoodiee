@model Hoodie.Models.User

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="clearfix userSection padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ul class="list-inline squareBtn">
                    <li class="li"><a asp-controller="User" asp-action="Profile" class="btn btn-common btn-theme cursor-default">Profile</a></li>
                    <li class="li"><a asp-controller="User" asp-action="AllOrders" class="btn btn-common">All Orders</a></li>
                    <li class="li"><a asp-controller="User" asp-action="Wishlist" class="btn btn-common">Wishlist</a></li>
                </ul>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="innerWrapper">
                    <div class="orderBox  patternbg">
                        profile
                    </div>

                    <div class="profile">
                        <div class="row">
                            <div class="col-md-9 col-xl-10">
                                <form class="form-horizontal" asp-controller="User" asp-action="ResetPassword" method="post">

                                    <div class="form-group row">
                                        <label for="password" class=" text-nowrap col-md-4 col-xl-2 control-label text-md-right">Current Password:</label>
                                        <div class="col-md-8 col-xl-10">
                                            <input type="password" class="form-control" name="password"  required>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="newPassword" class="text-nowrap col-md-4 col-xl-2 control-label text-md-right">New Password:</label>
                                        <div class="col-md-8 col-xl-10">
                                            <input type="password" class="form-control" name="newPassword" required>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="repeatPassword" class="text-nowrap col-md-4 col-xl-2 control-label text-md-right">Confirm Password:</label>
                                        <div class="col-md-8 col-xl-10">
                                            <input type="password" class="form-control" name="repeatPassword"  required>
                                        </div>
                                    </div>
                                    @if (TempData["Message"] != null)
                                    {
                                        <div class="alert alert-success text-center">
                                            @TempData["Message"]
                                        </div>
                                    }

                                    <div class="form-group row">
                                        <div class="col-md-12 text-center">
                                            <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

